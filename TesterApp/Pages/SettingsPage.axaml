<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:TesterApp.Pages.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="{x:Type vm:SettingsPageViewModel}"
             x:Class="TesterApp.Pages.SettingsPage">
    <ScrollViewer Padding="10">
        <ui:SettingsExpander Header="App Theme"
                             IconSource="DarkTheme"
                             Description="Change the current app theme">

            <ui:SettingsExpander.Footer>
                <ComboBox SelectedItem="{Binding SelectedAppTheme}"
                          ItemsSource="{Binding AppThemes}"
                          MinWidth="150" />
            </ui:SettingsExpander.Footer>
                
        </ui:SettingsExpander>
    </ScrollViewer>
</UserControl>
